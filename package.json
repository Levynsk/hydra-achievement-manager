{
  "name": "hydra-achievements-manager",
  "version": "1.2.0",
  "description": "A modern Hydra achievements manager",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "prod": "cross-env NODE_ENV=production electron .",
    "build": "electron-builder"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.hydra.achievements.manager",
    "productName": "Hydra Achievements Manager",
    "copyright": "Copyright Â© 2023",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "shortcutName": "Hydra Achievements Manager",
      "license": "LICENSE",
      "artifactName": "${productName}-setup-${version}.${ext}"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.ico",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "assets/icon.ico",
      "category": "Utility",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "levynascimento",
      "repo": "hydra-achievement-manager"
    }
  }
}